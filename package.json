{
  "name": "hax",
  "version": "1.0.0",
  "description": "New Theme for the Mozilla Hacks Blog",
  "main": "index.js",
  "scripts": {
    "watch": "onchange Hax/css/*.css -- npm run deploy",
    "deploy": "npm run build && npm run copy",
    "build": "postcss -u autoprefixer Hax/css/screen.css > Hax/style.css",
    "copy": "cp -r Hax /Applications/MAMP/htdocs/hacks/wp-content/themes/hax"
  },
  "author": "Potch",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^5.2.0",
    "onchange": "^1.1.0",
    "postcss-cli": "^1.3.1"
  },
  "dependencies": {
    "autoprefixer": "^5.2.0",
    "onchange": "^1.1.0",
    "postcss-cli": "^1.4.0"
  }
}
